<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag 'user.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold text-muted" style="font-size:.7rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 10rem"><%= liker.username %></small>
